#!/bin/bash

if [ $# -eq 1 ]
then
   echo "./dev/dev$1/bin/ziryab stop"
   ./dev/dev$1/bin/ziryab stop
elif [ $# -eq 2 ]
then
   for i in $(seq $1 $2)
   do
      echo "./dev/dev$i/bin/ziryab stop"
      ./dev/dev$i/bin/ziryab stop
   done
else
   echo "USAGE: $0 dev_NUM"
   echo "       $0 starting_NUM ending_NUM"
   exit -1
fi
